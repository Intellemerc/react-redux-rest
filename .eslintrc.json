{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import",
        "jest"
    ],
    "rules": {
        "no-tabs": "off",
        "comma-dangle": ["error", "never"],
        "indent": ["error", "tab"],
        "padded-blocks": 0,
        "import/no-extraneous-dependencies": ["error", {"devDependencies": true, "optionalDependencies": false, "peerDependencies": false}],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    },
    "env": {
        "jest/globals": true
    }
}